#!/bin/bash
# argument 1 is the name of the template file
# argument 2 is the name of the file to apply the template to

# print usage if there are not 2 arguments or the $2 is not a file or $1 is -h or --help
if [ "$#" -ne 2 ] || [ ! -f "$2" ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
  echo "Apply template to a file"
  echo "Usage: $0 templateName fileName"
  exit 1
fi

templateName=$1
fileName=$2

# if fileName ends with .pdf, we need to convert it to text
if [[ "$fileName" == *.pdf ]]; then
  pdf2txt.py -A -c UTF-8 "$fileName" | masktxt > "$fileName.txt"
  fileName="$fileName.txt"
fi

# execute file suggestCommand.js that is in the directory the script is run from with node , even if it is a symlink
node "$(dirname "$(readlink -f "$0")")/../js/applyTemplate.js" "$templateName" "$fileName"
